<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_bg_surface"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PetalPost"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#EE2B5B" />
    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/anniversary_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,042"
        android:textStyle="bold"
        android:textSize="54sp"
        android:textColor="#EE2B5B" />

    <TextView
        android:id="@+id/anniversary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Days Loving You"
        android:textSize="14sp"
        android:textColor="#9A4C5F" />

    <TextView
        android:id="@+id/anniversary_milestone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/widget_chip_primary"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="3rd Anniversary in 14 days"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#EE2B5B" />
</LinearLayout>
