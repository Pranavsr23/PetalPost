<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_bg_surface"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/anniversary_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="365"
            android:textStyle="bold"
            android:textSize="44sp"
            android:textColor="#EE2B5B" />

        <TextView
            android:id="@+id/anniversary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Days Together"
            android:textSize="12sp"
            android:textColor="#9A4C5F" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/anniversary_milestone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/widget_chip_primary"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="1 Year in 14 days"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#EE2B5B" />
</LinearLayout>
