rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isParticipant(spaceId) {
      return isSignedIn() &&
        request.auth.uid in get(/databases/$(database)/documents/spaces/$(spaceId)).data.participantUids;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;

      match /devices/{deviceId} {
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /spaces/{spaceId} {
      allow read: if isParticipant(spaceId);
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isParticipant(spaceId);
      allow delete: if false;

      match /notes/{noteId} {
        allow read: if isParticipant(spaceId);
        allow create: if isParticipant(spaceId)
          && request.resource.data.senderUid == request.auth.uid
          && request.resource.data.type in ['text', 'handwriting', 'voice']
          && (request.resource.data.type != 'text'
            || (request.resource.data.text is string && request.resource.data.text.size() <= 2000));
        allow update: if isParticipant(spaceId)
          && request.auth.uid != resource.data.senderUid
          && request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['readBy', 'reactions', 'isFavoriteBy']);
        allow delete: if false;
      }
    }
  }
}
